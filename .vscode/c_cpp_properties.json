{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "/opt/homebrew/opt/libomp/include"  // OpenMP header path
            ],
            "defines": [],
            "macFrameworkPath": [
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "compilerPath": "/opt/homebrew/bin/gcc",  // Use Homebrew GCC
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "macos-gcc-x64",  // Change to GCC mode for IntelliSense
            "browse": {
                "path": [
                    "${workspaceFolder}/**",
                    "/opt/homebrew/opt/libomp/include"  // OpenMP browse path for IntelliSense
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        }
    ],
    "version": 4
}
